@using Crudlicious.Models
@model Dish

<h1>Add a new Dish!</h1>
<a href="/">Home</a>

<form asp-action="create" method="post" asp-controller="Home">
    <div class="card-group">
        <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Chef">Chef's Name:</label>
                <input asp-for="Chef" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="Chef"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dishname">Name of Dish:</label>
                <input asp-for="Dishname" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="Dishname"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calories"># of Calories:</label>
                <input asp-for="Calories" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="Calories"></span>
            </div>
        </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Tastiness">Tastiness</label>
                    <select asp-for= "Tastiness" class="custom-select">
                            <option selected disabled>Choose a Tastiness</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Tastiness"></span>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" row="3" class="form-control" >Type Your Comment Here</textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-secondary m-1">Add dish</button>
                </div>
            </div>
        </div>
    </div>
</form>